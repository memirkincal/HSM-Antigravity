{
	"info": {
		"_postman_id": "hms_antigravity_collection",
		"name": "HMS Antigravity",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Create Appointment (Success)",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"const moment = require('moment');",
							"// Generate a random future time (tomorrow + 0-10 hours)",
							"let nextDay = moment().add(1, 'days').startOf('hour').add(Math.floor(Math.random() * 10), 'hours').toISOString();",
							"pm.collectionVariables.set('current_appointment_time', nextDay);",
							"console.log('Generated appointment time:', nextDay);"
						],
						"type": "text/javascript"
					}
				},
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test('Status code is 201', function () {",
							"    pm.response.to.have.status(201);",
							"});",
							"",
							"pm.test('Response has status success', function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.status).to.eql('success');",
							"});",
							"",
							"pm.test('Data has ID', function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.data.id).to.exist;",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"doctor_id\": 1,\n    \"patient_id\": 1,\n    \"appointment_time\": \"{{current_appointment_time}}\"\n}"
				},
				"url": {
					"raw": "{{base_url}}/api/v1/appointments",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"v1",
						"appointments"
					]
				}
			},
			"response": []
		},
		{
			"name": "Create Appointment (Conflict)",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test('Status code is 422', function () {",
							"    pm.response.to.have.status(422);",
							"});",
                            "pm.test('Response has status error', function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.status).to.eql('error');",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"doctor_id\": 1,\n    \"patient_id\": 1,\n    \"appointment_time\": \"{{current_appointment_time}}\"\n}"
				},
				"url": {
					"raw": "{{base_url}}/api/v1/appointments",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"v1",
						"appointments"
					]
				}
			},
			"response": []
		}
	],
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:3000",
			"type": "string"
		},
		{
			"key": "current_appointment_time",
			"value": "",
			"type": "string"
		}
	]
}
